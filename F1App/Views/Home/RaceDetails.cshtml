@model F1App.Models.RaceDetailsPageViewModel
@{
    ViewData["Title"] = Model.GpName;
}

<div class="container mt-4">
    <div class="mb-4">
        <a href="javascript:history.back()" class="text-white text-decoration-none d-flex align-items-center gap-2" style="font-size: 1.1rem;">
            <i class="bi bi-arrow-left"></i> <span>Back</span>
        </a>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        @if (ViewBag.CountryFlagUrl != null)
        {
            <img src="@ViewBag.CountryFlagUrl" class="me-3 rounded border border-secondary" style="width: 48px; height: auto;" />
        }
        <div>
            <h1 class="text-uppercase fw-bold fst-italic mb-0">@Model.GpName</h1>
            <div class="text-muted small">@Model.DateStart.ToString("dd MMM yyyy") â€¢ @Model.CircuitName</div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle" style="background-color: #000;">
            <thead>
                <tr class="text-uppercase text-muted small border-bottom border-secondary">
                    <th scope="col" class="py-3">Pos</th>
                    <th scope="col" class="py-3">No</th>
                    <th scope="col" class="py-3">Driver</th>
                    <th scope="col" class="py-3">Team</th>
                    <th scope="col" class="py-3 text-center">Laps</th>
                    <th scope="col" class="py-3 text-end">Time / Retired</th>
                    <th scope="col" class="py-3 text-end">Pts</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model.Results)
                {
                    <tr class="border-bottom border-secondary">
                        <td class="py-3 fw-bold">@result.Position</td>
                        <td class="py-3">@result.DriverNumber</td>
                        <td class="py-3">
                            <div class="d-flex align-items-center">
                                <img src="@result.DriverHeadshotUrl" alt="@result.DriverName" class="me-2 rounded-circle" style="width: 30px; height: 30px; object-fit: cover; background-color: #333;" />
                                <span class="fw-bold">@result.DriverName</span>
                            </div>
                        </td>
                        <td class="py-3">
                            <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(result.TeamLogoUrl))
                                {
                                    <div class="me-2 d-flex align-items-center justify-content-center bg-white rounded-circle" style="width: 24px; height: 24px; min-width: 24px; border: 1px solid #dee2e6;">
                                        <img src="@result.TeamLogoUrl" alt="@result.TeamName" style="max-width: 80%; max-height: 80%; object-fit: contain;" />
                                    </div>
                                }
                                <span>@result.TeamName</span>
                            </div>
                        </td>
                        <td class="py-3 text-center">@result.Laps</td>
                        <td class="py-3 text-end font-monospace">@result.TimeOrRetired</td>
                        <td class="py-3 text-end fw-bold">@result.Points.ToString("0")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
