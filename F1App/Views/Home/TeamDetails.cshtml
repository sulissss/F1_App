@model TeamDetailsViewModel
@{
    ViewData["Title"] = Model.TeamName + " Team Standings";
}

<div class="container mt-4">
    <div class="mb-4">
        <a href="javascript:history.back()" class="text-white text-decoration-none d-flex align-items-center gap-2" style="font-size: 1.1rem;">
            <i class="bi bi-arrow-left"></i> <span>Back</span>
        </a>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-uppercase fw-bold">@Model.Year @Model.TeamName TEAM STANDINGS</h2>
        
        <div class="dropdown">
            <button class="btn btn-outline-light dropdown-toggle" type="button" id="yearDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                @Model.Year
            </button>
            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="yearDropdown">
                <li><a class="dropdown-item" asp-action="TeamDetails" asp-route-id="@Model.TeamId" asp-route-year="2024">2024</a></li>
                <li><a class="dropdown-item" asp-action="TeamDetails" asp-route-id="@Model.TeamId" asp-route-year="2023">2023</a></li>
            </ul>
        </div>
    </div>

    <div class="card bg-black text-white border-0">
        <div class="card-body p-0">
            <table class="table table-dark table-hover mb-0" style="background-color: #000;">
                <thead>
                    <tr class="text-uppercase text-secondary" style="font-size: 0.8rem; border-bottom: 1px solid #333;">
                        <th scope="col" class="py-3 ps-4">Grand Prix</th>
                        <th scope="col" class="py-3">Date</th>
                        <th scope="col" class="py-3 pe-4 text-end">Pts.</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var result in Model.Results)
                    {
                        <tr style="border-bottom: 1px solid #222; cursor: pointer;" onclick="location.href='@Url.Action("RaceDetails", "Home", new { sessionId = result.SessionId })'">
                            <td class="py-3 ps-4 align-middle">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(result.CountryFlagUrl))
                                    {
                                        <img src="@result.CountryFlagUrl" alt="Flag" class="me-3 rounded-1" style="width: 24px; height: 16px; object-fit: cover;" />
                                    }
                                    <span class="fw-bold">@result.GpName.Replace("Grand Prix", "").Trim()</span>
                                </div>
                            </td>
                            <td class="py-3 align-middle">@result.Date.ToString("dd MMM")</td>
                            <td class="py-3 pe-4 text-end fw-bold align-middle">@result.Points.ToString("0.##")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .bg-black {
        background-color: #000 !important;
    }
    .table-dark {
        --bs-table-bg: #000;
        --bs-table-striped-bg: #111;
        --bs-table-hover-bg: #1a1a1a;
        color: #fff;
        border-color: #333;
    }
    .dropdown-menu-dark {
        background-color: #1a1a1a;
        border: 1px solid #333;
    }
    .dropdown-item {
        color: #fff;
    }
    .dropdown-item:hover {
        background-color: #333;
    }
</style>
