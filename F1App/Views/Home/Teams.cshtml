@model List<TeamViewModel>
@{
    ViewData["Title"] = "Teams";
}

<link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@400;700;900&display=swap" rel="stylesheet">

<div class="container mt-4">
    <h1 class="mb-4 text-uppercase fw-bold" style="font-family: 'Titillium Web', sans-serif;">F1 Teams @ViewBag.Year</h1>
    <p class="text-secondary mb-5">Find the current Formula 1 teams for the @ViewBag.Year season</p>

    <div class="row g-4">
        @foreach (var team in Model)
        {
            <div class="col-md-6">
                <a asp-action="TeamDetails" asp-route-id="@team.TeamId" asp-route-year="@ViewBag.Year" class="text-decoration-none text-white">
                    <div class="card h-100 border-0 overflow-hidden position-relative" style="background-color: @(team.ColourHex ?? "#e10600"); min-height: 220px; border-radius: 15px;">
                        
                        @* Dotted Pattern Overlay *@
                        <div class="position-absolute top-0 start-0 w-100 h-100" 
                             style="background-image: radial-gradient(rgba(0, 0, 0, 0.15) 1px, transparent 1px); background-size: 4px 4px; pointer-events: none;">
                        </div>

                        <div class="card-body p-4 position-relative" style="z-index: 2;">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h2 class="card-title fw-bold mb-3" style="font-family: 'Titillium Web', sans-serif; font-weight: 900; font-size: 2rem; font-style: italic;">@team.Name</h2>
                                    
                                    <div class="d-flex flex-column gap-2">
                                        @foreach (var driver in team.Drivers)
                                        {
                                            <div class="d-flex align-items-center gap-2">
                                                @if (!string.IsNullOrEmpty(driver.HeadshotUrl))
                                                {
                                                    <img src="@driver.HeadshotUrl" alt="@driver.FullName" class="rounded-circle" style="width: 30px; height: 30px; object-fit: cover; background-color: #fff;" />
                                                }
                                                @{
                                                    var names = driver.FullName.Split(' ');
                                                    var firstName = names.Length > 0 ? names[0] : "";
                                                    var lastName = names.Length > 1 ? names.Last() : "";
                                                }
                                                <span class="text-white" style="font-family: 'Titillium Web', sans-serif; font-size: 0.85rem; font-weight: 600;">
                                                    @firstName <span class="fw-bold">@lastName</span>
                                                </span>
                                            </div>
                                        }
                                    </div>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(team.TeamLogoUrl))
                                {
                                    <div class="bg-white rounded-circle p-2 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; opacity: 0.9;">
                                        <img src="@team.TeamLogoUrl" alt="@team.Name Logo" class="img-fluid" style="max-height: 35px; max-width: 35px;" />
                                    </div>
                                }
                            </div>
                        </div>
                        
                        @* Car Image *@
                        <div class="position-absolute bottom-0 end-0" style="z-index: 1; pointer-events: none; width: 75%;">
                            @if (!string.IsNullOrEmpty(team.CarImageUrl))
                            {
                                <img src="@team.CarImageUrl" alt="@team.Name Car" class="img-fluid float-end" style="margin-right: -10px; margin-bottom: 10px;" />
                            }
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
