@model List<RaceWinnerViewModel>
@{
    ViewData["Title"] = "Races";
}

<link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@400;600;700;900&display=swap" rel="stylesheet">

<div class="container-fluid py-4" style="background: linear-gradient(180deg, #0D0D12 0%, #15151E 100%); min-height: 100vh;">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 text-white text-uppercase fw-bold" style="font-family: 'Titillium Web', sans-serif;">
            <span style="color: #FF8000;">@ViewBag.Year</span> Race Results
        </h1>
        <p class="text-secondary">Click on any race to view full results and details</p>
    </div>

    <!-- Race Cards Grid -->
    <div class="row g-4 px-4">
        @foreach (var race in Model)
        {
            var teamColor = F1App.Services.ImageHelper.GetTeamColor(race.TeamName);
            <div class="col-md-6 col-lg-4 col-xl-3">
                <a asp-action="RaceDetails" asp-route-sessionId="@race.SessionId" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-lg text-white position-relative overflow-hidden" 
                         style="background: linear-gradient(145deg, #1f1f27, #15151e); transition: all 0.3s ease; cursor: pointer;">
                        <!-- Top Color Bar -->
                        <div style="height: 4px; background: @teamColor;"></div>
                        
                        <div class="card-body p-4">
                            <!-- GP Name and Flag -->
                            <div class="d-flex align-items-center mb-3">
                                @if (!string.IsNullOrEmpty(race.CountryFlagUrl))
                                {
                                    <img src="@race.CountryFlagUrl" alt="@race.GpName" class="rounded me-3" style="width: 40px; height: auto; box-shadow: 0 2px 8px rgba(0,0,0,0.3);" />
                                }
                                <div>
                                    <h5 class="fw-bold mb-0" style="font-family: 'Titillium Web', sans-serif;">@race.GpName</h5>
                                    <small class="text-secondary">@race.DateStart.ToString("dd MMMM yyyy")</small>
                                </div>
                            </div>

                            <hr class="border-secondary my-3" />

                            <!-- Winner Info -->
                            <div class="d-flex align-items-center">
                                <img src="@race.DriverHeadshotUrl" alt="@race.DriverName" 
                                     class="rounded-circle me-3" 
                                     style="width: 50px; height: 50px; object-fit: cover; background-color: #333; border: 2px solid @teamColor;" />
                                <div class="flex-grow-1">
                                    <div class="small text-secondary text-uppercase">Winner</div>
                                    <div class="fw-bold">@race.DriverName</div>
                                </div>
                                @if (!string.IsNullOrEmpty(race.TeamLogoUrl))
                                {
                                    <div class="d-flex align-items-center justify-content-center bg-white rounded-circle" style="width: 40px; height: 40px;">
                                        <img src="@race.TeamLogoUrl" alt="@race.TeamName" style="max-width: 75%; max-height: 75%; object-fit: contain;" />
                                    </div>
                                }
                            </div>

                            <!-- Stats -->
                            <div class="row mt-3 text-center">
                                <div class="col-6">
                                    <div class="small text-secondary">Laps</div>
                                    <div class="fw-bold">@race.Laps</div>
                                </div>
                                <div class="col-6">
                                    <div class="small text-secondary">Time</div>
                                    <div class="fw-bold font-monospace" style="font-size: 0.85rem;">@race.Time</div>
                                </div>
                            </div>
                        </div>

                        <!-- Click Indicator -->
                        <div class="card-footer bg-transparent border-0 text-center py-3" style="background: rgba(255,128,0,0.1) !important;">
                            <span class="text-warning small fw-bold">
                                <i class="bi bi-eye-fill me-1"></i> VIEW FULL RESULTS
                            </span>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

    <!-- Back Button -->
    <div class="text-center mt-5">
        <a href="/Home/Races" class="btn btn-outline-light btn-lg">
            <i class="bi bi-arrow-left me-2"></i> Back to Seasons
        </a>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 35px rgba(255, 128, 0, 0.2) !important;
    }
    .card:hover .card-footer span {
        color: #fff !important;
    }
</style>
