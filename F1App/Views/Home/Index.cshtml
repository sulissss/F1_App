@{
    ViewData["Title"] = "Home";
}

<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@400;600;700;900&display=swap" rel="stylesheet">

<div class="container-fluid py-5" style="background: linear-gradient(180deg, #0D0D12 0%, #1a1a24 50%, #15151E 100%); min-height: 100vh;">
    <!-- Hero Section -->
    <div class="text-center mb-5 pt-4">
        <h1 class="display-2 fw-bold text-white mb-3" style="font-family: 'Orbitron', sans-serif; letter-spacing: 3px;">
            <span style="color: #E80020;">F1</span> RACING DATABASE
        </h1>
        <p class="lead text-secondary fs-4" style="max-width: 600px; margin: 0 auto; font-family: 'Titillium Web', sans-serif;">
            Your gateway to comprehensive Formula 1 statistics, driver profiles, team data, and race archives.
        </p>
        <div class="mt-4">
            <span class="badge bg-danger px-3 py-2 me-2">2024 Season</span>
            <span class="badge bg-secondary px-3 py-2">20+ Drivers</span>
            <span class="badge bg-secondary px-3 py-2 ms-2">10 Teams</span>
        </div>
    </div>

    <!-- Navigation Cards -->
    <div class="row g-4 justify-content-center px-4">
        <!-- Drivers Card -->
        <div class="col-md-6 col-lg-4">
            <a href="/Home/Drivers" class="text-decoration-none">
                <div class="card h-100 text-white border-0 shadow-lg position-relative overflow-hidden" style="background: linear-gradient(135deg, #E80020 0%, #9F0016 100%); transition: all 0.4s ease; min-height: 180px;">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center py-5">
                        <h3 class="card-title fw-bold mb-2" style="font-family: 'Orbitron', sans-serif; font-size: 1.8rem;">DRIVERS</h3>
                        <p class="card-text opacity-75 text-center mb-0">Explore all F1 drivers, stats & standings</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Teams Card -->
        <div class="col-md-6 col-lg-4">
            <a href="/Home/Teams" class="text-decoration-none">
                <div class="card h-100 text-white border-0 shadow-lg position-relative overflow-hidden" style="background: linear-gradient(135deg, #3671C6 0%, #1E4A8C 100%); transition: all 0.4s ease; min-height: 180px;">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center py-5">
                        <h3 class="card-title fw-bold mb-2" style="font-family: 'Orbitron', sans-serif; font-size: 1.8rem;">TEAMS</h3>
                        <p class="card-text opacity-75 text-center mb-0">All 10 F1 constructors & details</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Races Card -->
        <div class="col-md-6 col-lg-4">
            <a href="/Home/Races" class="text-decoration-none">
                <div class="card h-100 text-white border-0 shadow-lg position-relative overflow-hidden" style="background: linear-gradient(135deg, #FF8000 0%, #CC6600 100%); transition: all 0.4s ease; min-height: 180px;">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center py-5">
                        <h3 class="card-title fw-bold mb-2" style="font-family: 'Orbitron', sans-serif; font-size: 1.8rem;">RACE ARCHIVE</h3>
                        <p class="card-text opacity-75 text-center mb-0">Browse race calendar & results by season</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 20px 40px rgba(0,0,0,0.4) !important;
    }
</style>
